<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primary_color"
    android:padding="20dp"
    >
    <TextView
        android:id="@+id/auth_started_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/started_title"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/auth_started_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/started_subtitle"
        android:fontFamily="@font/open_sans_regular"
        android:lineHeight="20sp"
        android:textColor="@color/dark_grey"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_started_title"
        />
    <ImageView
        android:id="@+id/auth_image_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_people_login"
        android:contentDescription="@string/started_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>